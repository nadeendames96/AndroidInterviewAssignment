<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:theme="@style/Theme.AppCompat"
        android:background="@android:color/transparent"
        android:layout_height="@dimen/large_control2">
    <androidx.cardview.widget.CardView
        android:layout_margin="@dimen/meduim_margin"
        app:cardCornerRadius="@dimen/big_margin"
        app:cardBackgroundColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                  <RelativeLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content">

                      <ImageView
                          android:id="@+id/urlPhoto"
                          android:layout_width="@dimen/large_control2"
                          android:layout_height="@dimen/big_control"
                          android:layout_centerHorizontal="true"
                          android:adjustViewBounds="true"
                          android:scaleType="center"
                          android:src="@drawable/logo" />
                  </RelativeLayout>
                    <TextView
                        android:layout_margin="@dimen/meduim_margin"
                        android:id="@+id/tvDescription"
                        android:text="@string/emp_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <RelativeLayout
                        android:layout_margin="@dimen/meduim_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button
                            android:layout_alignParentBottom="true"
                            android:visibility="gone"
                            android:background="@drawable/button_style"
                            android:id="@+id/btPortfolio"
                            android:layout_centerHorizontal="true"
                            android:text=""
                            android:layout_width="@dimen/large_control"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                </LinearLayout>
    </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>