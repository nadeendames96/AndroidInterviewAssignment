<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.ResultIsSearchActivity">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <LinearLayout
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <include layout="@layout/appar" android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/appbar"/>
               <TextView
                   android:fontFamily="@font/poppins_bold"
                   android:textSize="@dimen/meduim_font"
                   android:layout_marginRight="@dimen/meduim_margin"
                   android:layout_marginLeft="@dimen/meduim_margin"
                   android:layout_marginTop="@dimen/large_margin"
                   android:id="@+id/titleKeyword"
                   android:text="Null"
                   android:textColor="@color/black"
                   app:layout_constraintTop_toTopOf="parent"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>
               <androidx.recyclerview.widget.RecyclerView
                   android:id="@+id/rvImageShow"
                   android:layout_marginTop="@dimen/meduim_margin"
                   android:layout_width="match_parent"
                   android:layout_marginRight="@dimen/meduim_margin"
                   android:layout_marginLeft="@dimen/meduim_margin"
                   android:layout_height="wrap_content"/>
           </LinearLayout>
       </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>